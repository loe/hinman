<% page_title 'Teams' %>

<% content_for :meta do %>
  <meta property="og:title" content="Teams" />
  <meta property="og:type" content="sport" />
  <meta property="og:description" content="All Teams" />
<% end %>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr class="<%= cycle("even", "odd") %>">
        <td><%= link_to(team.name, team_path(team)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>