<% page_title @race.name, 'Races' %>

<% content_for :meta do %>
  <meta property="og:title" content="<%= @race.name %>" />
  <meta property="og:type" content="sport" />
  <meta property="og:description" content="<%= @race.result %>" />
<% end %>

<p>
  <b>ID:</b>
  <%= @race.name %> <fb:like>
</p>

<p>
  <b>Rotation:</b>
  <%= link_to(@rotation.name, rotation_path(@rotation)) %>
</p>

<p>
  <b>Teams:</b>
  <ul>
    <% @race.teams.each do |t| %>
    <li><%= link_to(t.name, team_path(t)) %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_rotation_race_path(@rotation, @race) %> |
<%= link_to 'Back', rotation_races_path(@rotation) %>