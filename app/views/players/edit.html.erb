<h1>Editing player</h1>

<% form_for([@team, @player]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', team_player_path(@team, @player) %> |
<%= link_to 'Back', team_players_path(@team) %>