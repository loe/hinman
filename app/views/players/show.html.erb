<% page_title @player.name, 'Players' %>

<% content_for :meta do %>
  <meta property="og:title" content="<%= @player.name %>" />
  <meta property="og:type" content="athlete" />
  <meta property="og:description" content="<%= @player.bio %>" />
<% end %>

<p>
  <b>Name:</b>
  <%= @player.name %> <fb:like layout="button_count" show_faces="false"></fb:like>
</p>

<p>
  <b>Bio:</b>
  <%= @player.bio %>
</p>

<p>
  <b>Team:</b>
  <%= link_to(@team.name, team_path(@team)) %>
</p>

<%= link_to 'Edit', edit_team_player_path(@team, @player) %> |
<%= link_to 'Back', team_players_path(@team) %>